{{#each this}}
    <h2 class='modal-cocktail__title'>{{strDrink}}</h2>
    <div class='flex-wrapper'>
        <div class='modal-cocktail__wrapper'>
            <h3 class='modal-cocktail__subtitle'>Instractions:</h3>
            <p class='modal-cocktail__info'>
                {{strInstructions}}
            </p>
        </div>

        <div class='ingridients__wrapper'>
            <div class='modal-cocktail__img-wrapper'>
                <img class='modal-cocktail__img' loading='lazy' src='{{strDrinkThumb}}' alt='{{strDrink}}' />
            </div>
            <div>
                <h2 class='modal-cocktail__title--tablet'>{{strDrink}}</h2>
                <h3 class='ingridients__title'>INGREDIENTS</h3>
                <h4 class='ingridients__subtitle'>Per cocktail</h4>
                <ul class='ingridients__list'>

                </ul>
            </div>
        </div>
    </div>

    <div class='favorite-btn__wrapper'>
        <button type='button' class='favorite-btn' id='strDrink{{idDrink}}'>
            <span class='favorite-btn__text'>Add to favourite</span>
        </button>
    </div>
